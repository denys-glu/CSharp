@model Survey
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6 offset-3">
            <form asp-action="Submission" asp-controller="Home" method="post">

                    <div class="form-group">
                        <span asp-validation-for="Name" class="form-text text-danger"></span>
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" id="name" asp-for="Name" placeholder="name">
                    </div>

                    <div class="form-group">
                        <span asp-validation-for="Location" class="form-text text-danger"></span>
                        <label for="location">Dojo Location</label>
                        <input type="text" class="form-control" id="location" asp-for="Location" placeholder="location">
                    </div>

                    <div class="form-group">
                        <span asp-validation-for="FavLanguage" class="form-text text-danger"></span>
                        <label class="form-check-label" asp-for="FavLanguage"></label>
                        <select asp-for="FavLanguage" id="FavLanguage">
                            <option value="C#">C#</option>
                            <option value="JS">JS</option>
                            <option value="Python">Python</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <span asp-validation-for="Comment" class="form-text text-danger"></span>
                        <div>
                        <label for="Comment">Comment (optional)</label>
                        </div>
                        <textarea class="form-control" asp-for="Comment" id="comment" rows="10"></textarea>
                    </div>

                    <button class="btn btn-primary">Submit</button>

            </form>
        </div>
    </div>
</div>
