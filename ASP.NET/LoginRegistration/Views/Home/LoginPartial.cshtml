@model LoginUser
<h1>Login</h1>
        <form asp-action="Login" asp-controller="Home" method="post">
            
            <div class="form-group">
                <span asp-validation-for="LoginEmail" class="form-text text-danger"></span>
                <label asp-for="LoginEmail">Email</label>
                <input type="text" class="form-control" id="Email" asp-for="LoginEmail">
            </div>

            <div class="form-group">
                <span asp-validation-for="LoginPassword" class="form-text text-danger"></span>
                <label asp-for="LoginPassword">Password</label>
                <input type="password" class="form-control" id="Password" asp-for="LoginPassword">
            </div>

            <button class="btn btn-primary">Submit</button>

        </form>